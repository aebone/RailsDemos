<div class="row">
	<div class="col-md-12">
		<p id="notice"><%= notice %></p>
	</div>
</div>

<div class="row">
	<div class="col-md-3">
		<%= image_tag(@product.image_url) %>
	</div>
	<div class="col-md-7">
		<h1><%= @product.title %></h1>	
		<p>
		  <strong>Description:</strong>
		  <%= @product.description %>
		</p>
	</div>
	<div class="col-md-2">
			<h2>Price:</h2>
		  <h1><%= @product.price %></h1>
		  <button class="btn btn-primary">Add To Cart</button>
	</div>
</div>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
