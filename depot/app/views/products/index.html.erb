<p id="notice"><%= notice %></p>

<h1 class="page-header">Products</h1>

<% @products.each do |product| %>
	<div class="row product">
		<div class="col-md-2">
		  <%= image_tag(product.image_url) %>
		</div>
		<div class="col-md-8">
			<h3><%= product.title %></h3>
			<%= truncate(strip_tags(product.description), length: 180) %>
			<h4><strong>Price:</strong> U$ <%= sprintf('%.2f', product.price) %></h4>
		</div>
		<div class="col-md-2">
		  <%= link_to 'Show', product, class: "btn btn-sm btn-primary" %><br>
		  <%= link_to 'Edit', edit_product_path(product), class: "btn btn-sm btn-warning" %><br>
		  <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
		</div>
  </div>
<% end %>