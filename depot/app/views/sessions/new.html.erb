<% if flash[:alert] %>
	<p id="notice"><%= flash[:alert] %></p>
<% end %> 

<%= form_tag do %> 
	<h3>Please Log In</h3>
	<p><%= label_tag :name, 'Name:' %><br>
	<%= text_field_tag :name, params[:name] %></p>
	<p><%= label_tag :password, 'Password:' %><br>
	<%= password_field_tag :password, params[:password] %></p>
	<%= submit_tag "Login", class: "btn btn-default" %>
<% end %>