<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1><hr>



    <% @posts.each do |post| %>
       <h4> <%= post.name %></h4>
       <h3> <%= post.title %> </h3>
       <p> <%= post.content %></p>
        <%= link_to 'Show', post %> |
        <%= link_to 'Edit', edit_post_path(post) %> |
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %><hr>
    <% end %>
